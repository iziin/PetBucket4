
@model PetBucket4.Models.Customer

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; <!--defines page layout-->
}

<!--Page for users to change their account password-->
<!--This page does not currently function with the DB-->

<!--New row-->
<div class="row">
    <!--Main insert-->
    <div class="col-lg-7 large-insert">
        <h1>Change Password</h1>
        <br />
        
        <!--Not currently linked to db-->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2 class="sub-heading">Customer</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.password, "Current Password", htmlAttributes: new { @class = "control-label col-md-2" }) <!--Password label-->
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } }) <!--Password field-->
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" }) <!--Checks for blank submission-->
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.password, "New Password", htmlAttributes: new { @class = "control-label col-md-2" }) <!--Password label-->
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } }) <!--Password field-->
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" }) <!--Checks for blank submission-->
                    </div>
                </div>

                <!--Submit button-->
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
       
    </div>
</div>