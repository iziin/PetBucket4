
@{
    ViewBag.Title = "My_Account";
    Layout = "~/Views/Shared/_Layout.cshtml"; <!--Defines layout of page-->
}

<!--Home page for users-->

<!--New row-->
<div class="row">
    <!--Main insert-->
    <div class="col-lg-12 large-insert">
        <h1 class="title-center">My Account</h1>
        <!--Displays user's email address-->
        @if (Session["UserId"] != null)
        {
            <p class="text-center">Hello @Session["Email"].ToString()</p>
        }
    </div>
</div>

<!--New row-->
<div class="row">
    <!--Secondary insert-->
    <div class="col-md-7 insert middle-center">
        <h2>Bookings</h2> 
        <p>Manage your current bookings or create a new booking.</p>
        <p>@Html.ActionLink("Manage Bookings", "Manage_Bookings", "Booking", new { area = "" }, new { @class = " btn btn-primary" }) <!--Links to Manage_Bookings page-->
        @Html.ActionLink("Make a New Booking", "Booking", "Booking", new { area = "" }, new { @class = " btn btn-primary" })</p> <!--Links to Booking page-->
    </div>
</div>

<!--New row-->
<div class="row">
    <!--Third insert-->
    <div class="col-md-7 insert middle-center">
        <h2>Your Pets</h2>
        <p>See the most recent photos or videos of your pet, uploaded daily by our staff, or watch our livestream, available 24/7, and see what your pet is doing in real time.</p>
        <p>@Html.ActionLink("Check on Your Pets", "Your_Pets", "User", new { area = "" }, new { @class = " btn btn-primary" })</p> <!--Links to Your_Pets page-->
    </div>
</div>

<!--New row-->
<div class="row">
    <!--Fourth insert-->
    <div class="col-md-7 insert middle-center">
        <h2>Account Details</h2>
        <p>View and update your account details.</p>
        <p>@Html.ActionLink("Account Details", "Account_Details", "User", new { area = "" }, new { @class = " btn btn-primary" })</p> <!--Links to Account_Details page-->
    </div>
</div>
