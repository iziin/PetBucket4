
@{
    ViewBag.Title = "Staff";
    Layout = "~/Views/Shared/_Layout.cshtml"; <!--Defines page layout-->
}

<!--Staff home page-->

<!--New row-->
<div class="row">
    <!--Main insert-->
    <div class="col-lg-12 large-insert">
        <h1 class="title-center">Staff Home</h1>
        <!--Displays staff name-->
        @if (Session["UserId"] != null)
        {
            <p class="text-center">Hello @Session["Email"].ToString()</p> <!--Except for staff naem instead of user email-->
        }
    </div>
</div>

<!--New row-->
<div class="row">
    <!--Second insert-->
    <div class="col-md-7 insert middle-center">
        <h2>Create New Booking</h2>
        <p>
            @Html.ActionLink("Create New", "Booking", "Booking", new { area = "" }, new { @class = " btn btn-primary" }) <!--Links to booking page-->
        </p>
    </div>
</div>

<!--New row -->
<div class="row">
    <!--Third insert-->
    <div class="col-md-7 insert middle-center">
        <h2>Current Bookings</h2>
        <p>View and update active bookings here.</p> <!--Active booking is where a pet is curretly being taken care of by PetBucket-->
        <p>
            @Html.ActionLink("View Active Bookings", "Current_Bookings", "Booking", new { area = "" }, new { @class = " btn btn-primary" }) <!--Currently unlinked-->
        </p>
    </div>
</div>

<!--New row-->
<div class="row">
    <!--Fourth insert-->
    <div class="col-md-7 insert middle-center">
        <h2>Upcoming Bookings</h2>
        <p>View and update upcoming bookings here.</p> <!--Non-active bookings-->
        <p>
            @Html.ActionLink("View Upcoming Bookings", "Upcoming_Bookings", "Booking", new { area = "" }, new { @class = " btn btn-primary" })  <!--Links to Upcoming_Bookings page-->
        </p>
    </div>
</div>