
@{
    ViewBag.Title = "My_Account";
    Layout = "~/Views/Shared/_Layout.cshtml"; <!--Defines layout of page-->
}

<!--Home page for users-->

<!--New row-->
<div class="row">
    <!--Main insert-->
    <div class="col-lg-12 large-insert">
        <h1 class="title-center">My Account</h1>
        <!--Displays user's name-->
            <p class="text-center">Hello @Session["First"]</p>
    </div>
</div>

<!--New row-->
<div class="row">
    <!--Secondary insert-->
    <div class="col-md-7 insert middle-center">
        <h2>Pet Registration</h2>
        <p>Before you can make a booking you need to register one of your pets with us. Register your pets here.</p>
        <p>
            @Html.ActionLink("Register New Pet", "Register_Pet", "Booking", new { area = "" }, new { @class = " btn btn-primary" }) <!--Links to Register_Pet page-->
    </p> 
    </div>
</div>

<!--New row-->
<div class="row">
    <!--Third insert-->
    <div class="col-md-7 insert middle-center">
        <h2>Bookings</h2> 
        <p>View/Manage your current bookings or create a new booking. Users with premium bookings can view livestreams here.</p>
        <p>@Html.ActionLink("View/Manage Bookings", "Manage_Bookings", "Booking", new { area = "" }, new { @class = " btn btn-primary" }) <!--Links to Manage_Bookings page-->
        @Html.ActionLink("Make a New Booking", "Select_Pet", "Booking", new { area = "" }, new { @class = " btn btn-primary" })</p> <!--Links to Booking page-->
    </div>
</div>

