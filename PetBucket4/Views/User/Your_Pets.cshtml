
@{
    ViewBag.Title = "Your_Pets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-7 insert">
        <h1>Your Pets</h1>
        <hr />
        <p>Placeholder</p>
        <br />
        @{
            var m = 4;
            for (var i = 1; i <= m; i++)
            {
                <div class="row">
                    <div class="col-md-7 insert">
                        <p>
                            Displays each pet based on petID relevant to the logged in user(@i)
                            <br/>
                            Pet name:
                            <br/>
                            Dropped Off:
                            <br/>
                            Current Pick-Up Date:
                            <br/>
                            @Html.ActionLink("Visit This Pet", "Pet_Info", "User", new { area = "" }, new { @class = " btn btn-primary b-button" })
                        </p>
                        <br />
                    </div>
                </div>
            }
        }
    </div>
</div>
