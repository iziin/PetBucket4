@model PetBucket4.Models.Customer

@{
    ViewBag.Title = "Forgot_Email";
    Layout = "~/Views/Shared/_Layout.cshtml"; <!--defines page layout-->
}

<!--The login page for users-->
<!--New row-->
<div class="row">
    <!--Main insert-->
    <div class="col-lg-7 large-insert">
        <h1>Forgot Email</h1>
        <p>To recover your email please fill out the following information.</p>
        <br />
        <!--Login handled by form-->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2 class="sub-heading">Recovery</h2>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <!--First Name-->
                <div class="form-group">
                    @Html.LabelFor(model => model.first_name, "First Name", htmlAttributes: new { @class = "control-label col-md-2" }) <!--Name label-->
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.first_name, new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } }) <!--Name field-->
                        @Html.ValidationMessageFor(model => model.first_name, "", new { @class = "text-danger" }) <!--Checks for blank submission-->
                    </div>
                </div>

                <!--Password-->
                <div class="form-group">
                    @Html.LabelFor(model => model.password, "Password", htmlAttributes: new { @class = "control-label col-md-2" }) <!--Password label-->
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } }) <!--Password field-->
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" }) <!--Checks for blank submission-->
                    </div>
                </div>

                <!--Submit button-->
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Recover Email" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>