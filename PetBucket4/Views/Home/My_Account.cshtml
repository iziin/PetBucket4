
@{
    ViewBag.Title = "My_Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 large-insert">
        <h1 class="title-center">My Account</h1>
        <p class="text-center">Hello (Username)!</p>
    </div>
</div>

<div class="row">
    <div class="col-md-7 insert middle-center">
        <h2>Bookings</h2>
        <p>Populate with drop-off and pick-up times for current bookings.</p>
        <p>(Example Only) Pet Name: Jim, Start Date: 10/10/17 End Date: 12/10/17
        @Html.ActionLink("Manage This Booking", "Booking", "Home", new { area = "" }, new { @class = " btn btn-primary" })</p>
        <p>@Html.ActionLink("Make a New Booking", "Booking", "Home", new { area = "" }, new { @class = " btn btn-primary" })</p>
    </div>
</div>

<div class="row">
    <div class="col-md-7 insert middle-center">
        <h2>Your Pets</h2>
        <p>Check up on your pets</p>
        <p>@Html.ActionLink("Check on Your Pets", "#", "Home", new { area = "" }, new { @class = " btn btn-primary" })</p>
    </div>
</div>

<div class="row">
    <div class="col-md-7 insert middle-center">
        <h2>Account Details</h2>
        <p>Check your account details and make any changes</p>
        <p>@Html.ActionLink("Account Details", "#", "Home", new { area = "" }, new { @class = " btn btn-primary" })</p>
    </div>
</div>
