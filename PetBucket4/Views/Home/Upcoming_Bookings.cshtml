
@{
    ViewBag.Title = "Upcoming_Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Michael made similar pages. My pages can be integrated or discarded but this layout should serve as a template-->
<!--Should be a seperate but I can't work out how to link pages that aren't in the home folder-->
<!--This page is currently unlinked-->
<div class="row">
    <div class="col-md-10 insert">
        <h1>Upcoming Bookings</h1>
        <hr />
        <p>Placeholder</p>
        <br />
        @{
            var m = 10;
            for (var i = 1; i <= m; i++)
            {
                <div class="row">
                    <div class="col-md-7 insert">
                        <p>
                            Displays each booking based on bookingid(@i)
                            @Html.ActionLink("Delete Booking", "#", "Home", new { area = "" }, new { @class = " btn btn-warning b-button" })
                            @Html.ActionLink("Edit Booking", "#", "Home", new { area = "" }, new { @class = " btn btn-primary b-button" })
                        </p>
                        <br />
                    </div>
                </div>
            }
        }
    </div>
</div>

