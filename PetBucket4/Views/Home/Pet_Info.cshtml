
@{
    ViewBag.Title = "Pet_Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 large-insert">
        <h1 class="title-center">>Pet Name Here<</h1> <!--Should display pets name-->
        <p class="text-center">Placeholder</p>
    </div>
</div>
<div class="row">
    <div class="col-md-7 insert middle-center">
        <h2>Gallery</h2>
        <p>
            Check out photos of your pet here. Lovingly taken by our staff.
        </p>
        <p>@Html.ActionLink("Gallery", "Gallery", "Home", new { area = "" }, new { @class = " btn btn-primary" })</p> <!--Gallery should display this pet's photos first but can share the main gallery page-->
    </div>
</div>
<div class="row">
    <div class="col-md-7 insert middle-center">
        <h2>Livestream</h2>
        <p>Check out our 24/7 livestream of your pet. (Only available to Premium Service)</p>
        <p>@Html.ActionLink("Livestream", "Livestream", "Home", new { area = "" }, new { @class = " btn btn-primary" })</p>
    </div>
</div>
<div class="row">
    <div class="col-md-7 insert middle-center">
        <h2>Options</h2>
        <p>Check out the various options you can customise for your pet's stay. Choose what brand of food your pet eats, and how often we should feed it.</p>
        <p>@Html.ActionLink("Food Options", "#", "Home", new { area = "" }, new { @class = " btn btn-primary" })</p>
    </div>
</div>



