@model PetBucket4.Models.Pet



@{
    ViewBag.Title = "Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Book"))
{
    @Html.AntiForgeryToken()
    if (ViewBag.Message != null)
    {
       @* <div style="border:solid 1px green">
            @ViewBag.Message
        </div> *@
    }


        <body>
            <div class="row">
                <div class="col-md-5 login-window">
                    <h1>Booking</h1>
                    <form method="post" action="#" id="booking-form">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                          <p>Type Of Pet</p>
                            <div class="col-md-10">
                                <div class="col-md-10">
                                    @{
                                        List<SelectListItem> listItems = new List<SelectListItem>();
                                        listItems.Add(new SelectListItem
                                        {
                                            Text = "Dog",
                                            Value = "Dog"
                                        });
                                        listItems.Add(new SelectListItem
                                        {
                                            Text = "Cat",
                                            Value = "Cat",
                                            Selected = true
                                        });
                                        listItems.Add(new SelectListItem
                                        {
                                            Text = "Bird",
                                            Value = "Bird"
                                        });
                                        listItems.Add(new SelectListItem
                                        {
                                            Text = "Reptile",
                                            Value = "Reptile"
                                        });
                                        listItems.Add(new SelectListItem
                                        {
                                            Text = "Rodent",
                                            Value = "Rodent"
                                        });
                                    }
                                    </div>
                                    </div>
                                    @Html.DropDownList("animal", listItems, new { @class = "form-control" })
                                </div>

                                <p>
                                    Drop Off Date: <br />
                                    <input type="datetime-local" id="drop-off-date" name="drop-off-date" />
                                </p>
                                <p>
                                    Pick-Up Date:
                                    <br />
                                    <input type="datetime-local" id="pick-up-date" name="pick-up-date" />
                                </p>

                        <div class="form-group">
                            <p>Service</p>
                            <div class="col-md-10">
                                <div class="col-md-10">
                                    @{
                                        List<SelectListItem> ServiceListItems = new List<SelectListItem>();
                                        ServiceListItems.Add(new SelectListItem
                                        {
                                            Text = "Basic",
                                            Value = "Standard"
                                        });
                                        ServiceListItems.Add(new SelectListItem
                                        {
                                            Text = "Standard",
                                            Value = "Standard",
                                            Selected = true
                                        });
                                        ServiceListItems.Add(new SelectListItem
                                        {
                                            Text = "Premium",
                                            Value = "Premium"
                                        });
                                        ServiceListItems.Add(new SelectListItem
                                        {
                                            Text = "To your door",
                                            Value = "To your door"
                                        });

                                    }
                                </div>
                            </div>
                            @Html.DropDownList("Service", ServiceListItems, new { @class = "form-control" })
                        </div>

                           
                            <input type="submit" value="Booking" id="submit-booking" />
                    </form>
                </div>
            </div>
        </body>
  
    }
