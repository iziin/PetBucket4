
@{
    ViewBag.Title = "Booking_Success";
    Layout = "~/Views/Shared/_Layout.cshtml"; <!--Defines page layout-->
}

<!--New row-->
<div class="row">
    <!--Main div-->
    <div class="col-lg-12 large-insert">
        <h1 class="title-center">Booking Complete!</h1>
        <p class="text-center">
            Congratulations! You have successfully completed your booking!
        </p>
        <p class="text-center">If you booked a premium service you can view your livestream from  @Html.ActionLink("here", "Manage_Bookings", "Booking") after we have picked your pet up.</p> <!--Links to manage bookings page-->
        <br />
        <p class="text-center">
            @Html.ActionLink("Continue", "My_Account", "User", new { area = "" }, new { @class = "btn btn-primary btn-lg" }) <!--Links to My_Account-->
        </p>
    </div>
</div>